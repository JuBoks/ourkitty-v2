<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"
    android:gravity="center"
    android:elevation="10dp"
    android:background="@drawable/dishcard"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="30sp"
        android:textStyle="bold"
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록을 완료하시겠습니까?"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:padding="30sp"
        android:gravity="center"
        android:weightSum="3"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialogConfirmButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_below="@id/dialogMessage"
            android:layout_marginStart="8dp"
            android:background="@drawable/button"
            android:fontFamily="@font/yeonsung"
            android:text="예"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/dialogCancelButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_below="@id/dialogMessage"
            android:layout_toEndOf="@id/dialogConfirmButton"
            android:background="@drawable/graybutton"
            android:fontFamily="@font/yeonsung"
            android:text="아니오"
            android:textColor="@color/hotPink"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>